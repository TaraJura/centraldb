<p style="color: green"><%= notice %></p>

<h1>Zones</h1>

<div id="zones">
<table class="table table-striped table-hover table-borderless"> 
      <thead class="table-dark">
        <tr>
          <th scope="col"><strong>Zone ID:</strong></th>
          <th scope="col"><strong>Name:</strong></th>
          <th scope="col"><strong>Accessed visitors:</strong></th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @zones.each do |zone| %>    
        <tr>
          <td><%= zone.id %></td>
          <td><%= zone.name %></td>
          <td><%= zone.visitorsZoneAcce.map{|visitorsZoneAcce| visitorsZoneAcce.visitor_id}.join(", ") %></td>
          <td> <%= link_to "Show this zone", zone, class:"btn btn-outline-dark" %><br></td>
          <td> <%= link_to "Add Customer", new_customers_zone_acce_path, class:"btn btn-outline-dark" %><br></td>
        </tr>
        <% end %>
      </tbody>
  </table>
</div>

<%= link_to "New zone", new_zone_path, class:"btn btn-secondary" %>
