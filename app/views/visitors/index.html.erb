<p style="color: green">
  <%= notice %>
</p>
<h1>Active Visitors</h1>
<div id="visitors">
  <% @visitors.each do |visitor| %>
   <div id="<%= dom_id visitor %>">
 <div class="container" style="text-align: center;">
  <div class="row">
    <div class="col">
      <p>
        <strong>Name:</strong>
        <%= visitor.name %>
      </p>
    </div>
    <div class="col">
      <p>
        <strong>Email:</strong>
        <%= visitor.email %>
      </p>
    </div>
    <div class="col">
      <p>
        <strong>Phone:</strong>
        <%= visitor.phone %>
      </p>
    </div>
    <div class="col">
      <p>
        <strong>Identity card type:</strong>
        <%= visitor.identity_card_type %>
      </p>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <p>
        <strong>Identity card number:</strong>
        <%= visitor.identity_card_number %>
      </p>
    </div>
    <div class="col">
      <p>
        <strong>Expires:</strong>
        <%= visitor.expires %>
      </p>
    </div>
    <div class="col">
      <p>
        <strong>Accessible zones:</strong>
        <%= visitor.visitorsZoneAcce.map{|visitorsZoneAcce| visitorsZoneAcce.zone_id}.join(", ") %>
      </p>
    </div>
    <div class="col">
      <p>
        <strong>Accessible zones:</strong>
        <%= visitor.visitorsZoneAcce.map { |i| i.zone.name }.join (", ")  %>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <p>
        
      </p>
    </div>
    <div class="col">
      <p>
        
      </p>
    </div>
    <div class="col">
      <p>
        <%= link_to "Visitors access for this Zone", new_visitors_zone_acce_path %>
      </p>
    </div>
    <div class="col">
      <p>
        <%= link_to "Show this visitor", visitor %>
      </p>
    </div>
  </div>
</div>
<hr>
  <% end %>
</div>
<%= link_to "New visitor", new_visitor_path %>


