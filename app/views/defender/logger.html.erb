<% Audited::Audit.order(created_at: :desc).each do |audit| %>

   <table class="table table-striped table-hover  align-middle">
   <tbody>
    <tr>
      <th style="width: 10%;" scope="row"><%= audit.created_at %></th>
      <td style="width: 5%;"><%= audit.user_id %></td>
      <td style="width: 15%;"><%= audit.auditable_type %></td>
